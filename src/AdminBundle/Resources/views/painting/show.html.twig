{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <h3>Painting</h3>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ painting.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ painting.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ painting.description }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ painting.thumbnail }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ painting.image }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if painting.createdAt %}{{ painting.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('painting_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('painting_edit', { 'id': painting.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
